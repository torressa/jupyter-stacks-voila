#!/usr/bin/env bash

cd ../docker
# Remove containers if already running
docker-compose \
	--file docker-compose.build.yml --file docker-compose.voila.yml \
	--file docker-compose.nginx.yml \
	rm -fsv
docker-compose \
	--file docker-compose.build.yml --file docker-compose.voila.yml \
	--file docker-compose.nginx.yml \
	down
# Build and spin (add `-d` flag to run detached)
docker-compose \
	--file docker-compose.build.yml --file docker-compose.voila.yml \
	up --build --remove-orphans
